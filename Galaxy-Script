    local Tabs = {}
    local TabHeights = {} 
    
    local function CreateTab(name, iconId)
        local btn = Instance.new("TextButton", Sidebar)
        btn.Size = UDim2.new(1, -20, 0, 38)
        btn.Position = UDim2.new(0, 10, 0, 80 + (#Tabs * 44))
        btn.BackgroundColor3 = Colors.Sidebar
        btn.Text = "      " .. name
        btn.Font = Enum.Font.GothamBold
        btn.TextColor3 = Colors.TextDark
        btn.TextSize = 13
        btn.TextXAlignment = Enum.TextXAlignment.Left
        btn.AutoButtonColor = false
        AddCorner(btn, 6)
        
        -- Selected Indicator
        local ind = Instance.new("Frame", btn)
        ind.Size = UDim2.new(0, 3, 0.6, 0)
        ind.Position = UDim2.new(0, 0, 0.2, 0)
        ind.BackgroundColor3 = Colors.Accent
        ind.Visible = false
        AddCorner(ind, 2)
        RegisterThemeObject(ind, "BackgroundColor3", "Accent")

        local frame = Instance.new("ScrollingFrame", Container)
        frame.BackgroundTransparency = 1
        frame.Size = UDim2.new(1, 0, 1, 0)
        frame.CanvasSize = UDim2.new(0,0,0,0)
        frame.ScrollBarThickness = 2
        frame.ScrollBarImageColor3 = Color3.fromRGB(80,80,80)
        frame.Visible = false
        
        TabHeights[frame] = 5
        
        -- Animation
        btn.MouseEnter:Connect(function() 
            if not ind.Visible then 
                Tween(btn, {TextColor3 = Colors.Text, BackgroundColor3 = Colors.Hover}) 
            end 
        end)
        btn.MouseLeave:Connect(function() 
            if not ind.Visible then 
                Tween(btn, {TextColor3 = Colors.TextDark, BackgroundColor3 = Colors.Sidebar}) 
            end 
        end)
        
        table.insert(Tabs, {Btn = btn, Frame = frame, Ind = ind})
        
        btn.MouseButton1Click:Connect(function()
            for _, t in pairs(Tabs) do 
                t.Frame.Visible = false
                t.Ind.Visible = false
                Tween(t.Btn, {TextColor3 = Colors.TextDark, BackgroundColor3 = Colors.Sidebar}) 
            end
            frame.Visible = true
            ind.Visible = true
            Tween(btn, {TextColor3 = Colors.Text, BackgroundColor3 = Colors.Item})
        end)
        return frame
    end
    
    local TabCombat = CreateTab("Combat")
