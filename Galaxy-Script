    local Connections = {}
    local function Connect(signal, func)
        local c = signal:Connect(func)
        table.insert(Connections, c)
        return c
    end

    -- // SOUNDS //
    local function PlaySound(id)
        local s = Instance.new("Sound")
        s.SoundId = id
        s.Volume = 1
        s.Parent = game:GetService("SoundService")
        s.PlayOnRemove = true
        s.DestroyOnRemove = true
        s:Destroy()
    end
