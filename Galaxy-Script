    ArrayLayout.SortOrder = Enum.SortOrder.LayoutOrder
    ArrayLayout.Padding = UDim.new(0, 2)

    local function UpdateHUD(name, state)
        if state then
            if ArrayList:FindFirstChild(name) then return end
            local l = Instance.new("TextLabel", ArrayList)
            l.Name = name
            l.Text = name
            l.Font = Enum.Font.GothamBold
            l.TextSize = 16
            l.TextColor3 = Colors.Accent
            l.BackgroundTransparency = 1
            l.Size = UDim2.new(1, 0, 0, 20)
            l.TextXAlignment = Enum.TextXAlignment.Left
            AddStroke(l, Color3.new(0,0,0), 1)
            RegisterThemeObject(l, "TextColor3", "Accent")
            
            -- Animation
            l.TextTransparency = 1
            Tween(l, {TextTransparency = 0}, 0.3)
            
            -- Sort by text length for a clean "Array List" look
            local entries = {}
            for _, c in pairs(ArrayList:GetChildren()) do
                if c:IsA("TextLabel") then table.insert(entries, c) end
            end
            table.sort(entries, function(a, b) return #a.Text > #b.Text end)
            for i, v in ipairs(entries) do v.LayoutOrder = i end
        else
            local l = ArrayList:FindFirstChild(name)
            if l then 
                Tween(l, {TextTransparency = 1}, 0.2)
                task.delay(0.2, function() l:Destroy() end)
            end
        end
    end

