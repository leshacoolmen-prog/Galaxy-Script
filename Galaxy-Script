    AddToggle(TabMisc, "FE Invisibility (Seat)", false, function(s)
        config.invisibility = s
        if s then
            local char = LocalPlayer.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                local root = char.HumanoidRootPart
                local savedPos = root.CFrame
                
                -- Teleport to safety
                char:MoveTo(seatTeleportPosition)
                task.wait(0.1)
                
                if root.Position.Y < voidLevelYThreshold then
                    char:MoveTo(savedPos.p)
                    return
                end
                
                currentSeat = Instance.new("Seat")
                currentSeat.Name = "invischair"
                currentSeat.Parent = workspace
                currentSeat.Transparency = 1
                currentSeat.CanCollide = false
                currentSeat.Position = seatTeleportPosition
                
                local weld = Instance.new("Weld", currentSeat)
                local torso = char:FindFirstChild("Torso") or char:FindFirstChild("UpperTorso")
                if torso then
                    weld.Part0 = currentSeat
                    weld.Part1 = torso
                    task.wait()
                    currentSeat.CFrame = savedPos
                else
                    currentSeat:Destroy()
                end
            end
        else
            if currentSeat then
                currentSeat:Destroy()
                currentSeat = nil
            end
        end
    end, "invis")
